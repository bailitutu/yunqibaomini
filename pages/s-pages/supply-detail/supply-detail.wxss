/* pages/s-pages/supply-detail/supply-detail.wxss */

.supply_body{
  width: 100%;
  height:100%;
  position: relative;
}
.supply_info_item{
  height:260rpx;
  opacity:0.8;
  border-radius: 0 0 8rpx 8rpx;
}
.supply_detail{
  height:210rpx;
  width:100%;
  padding:20rpx 20rpx 24rpx;
}
.supply_detail .supply-detail-inner{
  height:100%;
  width:100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: flex-start;
  align-items: stretch;
}
.supply_headImg{
  width:162rpx;
  height:162rpx;
  border-radius: 8rpx;
}

.supply_info_detail{
  flex-grow: 4;
  text-align: left;
  margin-left:20rpx;  
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: space-around;
  align-items: stretch;
}

.supply_info_detail .brandList text{
  padding:0 10rpx 0 5rpx ;
  line-height: 28rpx;
  border-radius: 4rpx;
  height:28rpx;
}





/* 主要内容 */
.supply_info_content{
  position: absolute;
  top:206rpx;
  bottom:100rpx;
  left:0;
  padding:0 20rpx;
  width:100%;
}
.supply_info_content .supply_info_inner{
    width:100%;
    background: #fff;
    height:100%;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    align-content: space-between;
}

.supply_tab{
  flex-flow: 1;
  height:88rpx;
  width:100%;
  padding:0 20rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: space-around;
  align-items: stretch;
  border-bottom:1px solid #e9e9e9;
}

.supply_tab>view{
  min-width:240rpx;
  text-align: center;
}
.supply_tab>view text{
  height:100%;
  display: inline-block;
}
.supply_tab>view text.active{
  border-bottom:2px solid #109ba6;
}

.supply_tab_inner{
  flex-grow: 4;
}

/* 商品部分 */
.tab_goods_item{
  height:100%;
  padding-left: 20rpx;
  
  display: -webkit-flex;  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  align-content: space-between;
}
.tab_goods_item .tab_menu{
  width:156rpx;
  height:100%;
  flex-grow: 1;
  line-height: 88rpx;
  text-align: center;
  padding-right:16rpx;
  border-right:1px solid #e9e9e9;
}
.tab_goods_item .tab_menu>view{
  height:80rpx;
  width:100%;
  border-bottom:1px solid #e9e9e9;

}
.tab_goods_item .tab_menu>view.active{
  color:#333;
}
.tab_goods_item .tab_goods{
  flex-flow: 4;
  margin-left:20rpx;
  width:500rpx;  
  padding-right :24rpx;
  
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab_goods .goods_cell{
  height: 180rpx;
  width:100%;
  padding:20rpx 0;
  border-bottom:1px solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: space-between;
  align-items: stretch;
}
/* .tab_goods .goods_cell:last-child{
  border:none;
} */

.goods_cell image{
  width:140rpx;
  height: 140rpx;
  border-radius: 8rpx;
}
.good_info{
  flex-grow:2;
  margin-left:20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-content: space-between;
  align-items: stretch;
}
.s{
  margin-left:10rpx;
  text-decoration:line-through;
}
.num_tool{
  height:60rpx;
  line-height: 60rpx;
  align-self: flex-end;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-content: center;
  align-items: stretch;
  transition: all 0.1s ease-in-out;
}
.num_tool.active{
  min-width:160rpx;
}

.num_tool .num_tool_btn{
  width:50rpx;
  height: 50rpx;
  align-self: flex-end;
}
.num_tool_btn image{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
}


/* 商户部分 */

.tab_shops_item{
  height:100%;
}
.shops_cell{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: space-between;
  align-items: center;
  padding:20rpx 0;
  border-bottom:1px solid #e9e9e9;
}

.shops_cell>view,.shops_more>view{
  width:48rpx;
  text-align: right;
}
.shops_more{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
  padding:20rpx 0;
  border-bottom:1px solid #e9e9e9;
}
.shops_more text {
  width:300rpx;
  flex-grow: 3;
  margin-left:20rpx;
} 

.goTo_icon{
  width:14rpx;
  height:28rpx;
}
.shops_cell>text{
  margin-left:20rpx;
  flex-flow: 4;
}



/* 底部购物车部分 */

.shop_footer,.shop_cover{
  width:100%;
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  z-index: 100;
}

.shop_cover.cover{
  height:100%;
  background: rgba(0, 0,  0, 0.5);
  overflow:hidden;
}



.shop_car_item{
  max-height:470rpx;
  background: #fff;
}
.shop_car_title{
  height:90rpx;
  width: 100%;
  background:#f4f8ff; 
  text-align: center;
  line-height: 90rpx;
}
.shop_car_list{
  max-height:430rpx;
  padding-bottom:50rpx;
}
.car_cell{
  height: 120rpx;
  padding:20rpx;
  width:100%;
  border-bottom:1px solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  align-content: space-between;
}
.car_cell_info{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-content: space-around;
  align-items: stretch;
}











.shop_footer_item{
  height:100rpx;
  width:100%;
  background:#797D83;
  padding-left:144rpx;
  position:relative;
  
}
.shop_car_btn{
  position: absolute;
  top:-45rpx;
  left:40rpx;
  z-index: 1;
  width:96rpx;
  height:96rpx;
  border-radius: 100%;
  padding:0;

}
.shop_car_btn image{
  width:96rpx;
  height:96rpx;
}

.shop_foot_inner{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: stretch;
  align-content: space-between;
}

.shop_allPrice{
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-content: space-around;
  align-items: stretch;
  flex-direction: column;
}

.confirmBtn{
  width:260rpx;
  height:100%;
  text-align: center;
  line-height: 100rpx;
  background:#e4914a;
}







