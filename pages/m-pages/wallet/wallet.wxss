/* pages/m-pages/wallet/wallet.wxss */

.wallet_item{
  width:100%;
  height:268rpx;
  position: relative;
}
.wallet_bg{

  width:100%;
  height:100%;
}
.wallet_item .wallet_inner{
  position: absolute;
  top:0;
  left:0;
  z-index: 1;
  width:100%;
  height:100%;
  padding:30rpx 0;
}
.wallet_title{
  height:40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-content: space-between;
  align-items: center;
}

.wallet_inner>text{
  display: block;
  text-align: center;
  color:#ffffff;
  margin-top:16rpx;
}
.wallet_btn_group{
  width:100%;
  text-align: center;
  margin-top: 32rpx;
}
.wallet_btn_group button{
  width:160rpx;
  height:60rpx;
  font-size:28rpx;
  line-height: 60rpx;
  color:#ffffff;
  text-align: center;
  background: none;
  border:1px solid #fff;
  border-radius: 8rpx;
  display: inline-block;
  padding:0;
}
.wallet_btn_group button:first-child{
  margin-right:30rpx;
}
.wallet_btn_group button:last-child{
  margin-left:30rpx;
}






