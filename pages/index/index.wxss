  margin-top:20rpx;
  color:#999999;
}
.banner swiper-item .weight{
  color:#109ba6;
}
.banner swiper-item .attr{
  font-size:26rpx;
}

.swiper-btn{
  width:88rpx;
  height:100rpx;
  position:absolute;
  top:144rpx;
  z-index:100;
  text-align: center;
  line-height: 100rpx;

}
.swiper-btn-l{
  left:40rpx;
}
.swiper-btn-r{
  right:40rpx;
}
.swiper-btn image{
  width:26rpx;
  height:48rpx;
}


