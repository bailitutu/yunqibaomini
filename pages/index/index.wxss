.pla_spread{
  width:120rpx;
  height:100rpx;
  position:absolute;
  top:0;
  right:30rpx;
  z-index: 1;
  font-size:28rpx;
  color:#109ba6;
  line-height: 100rpx;
  padding:0 20rpx;
}
.pla_spread i{
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  border-top: 10rpx solid #999999;
  border-bottom:0;
  position:absolute;
  right:0;
  top:50%;
  z-index: 10;
  margin-top:-5rpx;
}
 .pla_spread.active i{
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  border-bottom: 10rpx solid #999999;
