}

/* 功能栏 */

.tool_item{
  margin:10rpx 0;
  height:140rpx;
  padding:10px 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}


.tool_item .tool_cell{
  width:25%;
  height:124rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: space-around;
}
.tool_item .tool_cell + .tool_cell{
  border-left:1px solid #b7e1e4;
}
.tool_item .tool_cell image{
  width:64rpx;
  height:64rpx;
  margin:0 auto 10rpx;
  display: block;

}
.no_goods{
  width: 100%;
  display: flex;
  padding:80rpx 0;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.no_img image{
  width:150rpx;
  height: 199.5rpx;
}



/* 商品列表 */
.pla_title{
  height:75rpx;
  width:100%;
  position:relative;
  border-bottom: 1px solid #b7e1e4;
}
.pla_title text{
  font-size:32rpx;
  line-height:75rpx;
  color:#333333;
  padding-left:30rpx;
  position: relative;
}
.pla_title text::after{
  content: "";
  width:4rpx;
  height:32rpx;
  background: #109ba6;
  position: absolute;
  left:0;
  top:50%;
  margin-top:-16rpx;
  z-index: 1;
}


.goods_list .goods_cell{
  height:193rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx 0;
  border-bottom: 1px solid #b7e1e4;
}
.goods_list .goods_cell:last-child{
    border-bottom: none;
}
.goods_cell .goods_img{
  height:150rpx;
  width:150rpx;
  border:1px solid #b7e1e4;
  border-radius: 10rpx;
  overflow:hidden;
}
.goods_cell .goods_img image{
  width:100%;
  height:100%;
}
.goods_attr{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  align-content: center;
  flex-grow: 3;
}
.goods_btns{
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;

}
.goods_btns .order_btn{
  height:64rpx;
  padding:0 15rpx;
  line-height: 64rpx;
  background: #1da5b3;
  color:#fff;
  border-radius: 10rpx;
}

.goods_btns .order_btn.space{
  background: #fff;
  color:#1da5b3;
  border:1px solid #1da5b3;
}



















