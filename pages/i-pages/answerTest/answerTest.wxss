.ac_body{
  width:100%;
  height:100%;
  position: relative;
}
.ac_header{
  height:360rpx;
  width: 100%;
  position: absolute;
  top:0;
  left:0;
  z-index: 1;

}
.ac_header .line{
  width:100%;
  height:2rpx;
  background: #4df4ff;
  position: absolute;
  top:50%;
  left: 0;
  z-index: 1;
  margin-top:-1px;
}
.ac_header .countdown_item{
  width:298rpx;
  height:260rpx;
  opacity: 1;
  padding:0 15rpx;
  position:absolute;
  top:50%;
  left:50%;
  z-index: 1000;
  margin:-130rpx 0 0 -134rpx;
}
.countdown_item>image{
  width:268rpx;
  height:260rpx;
}
.countdown_item .countdown_text{
  height:100%;
  width:100%;
  position:absolute;
  top:0;
  left:0;
  z-index: 10;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  align-content: center;
}
.countdown_text text{
  display: block;
  text-align: center;
  margin: 20rpx 0;
}
.c-count{
    color:#e4914a;
}

.ac_content{
  width:100%;
  position:absolute;
  top:340rpx;
  left:0;
  z-index: 1001;
  padding:0 24rpx 40rpx;  
}

.ac_list{
  padding:0 20rpx ;
}
.ac_list .ac_cell{
  padding:20rpx 0;
}
.ac_cell_title{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content:flex-start;
  align-items: center;
}
.ac_cell_title>image{
  height: 30rpx;
  width: 30rpx;
  margin-right:20rpx;
}

.ac_answer_list,.ac_question{
  padding:20rpx 24rpx 0 50rpx ;

}
.ac_answer_list .answer_cell {
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  min-height:60rpx;
  margin-bottom:20rpx;
  
}
.answer_cell>view{
  width:46rpx;
  height:46rpx;
  align-self: flex-start;
  margin-right:20rpx;
}
.ac_answer_list .answer_cell image{
  width:46rpx;
  height:46rpx;
}

.answer_cell text{
  line-height: 44rpx;
  min-height:60rpx;
}


