/* pages/i-pages/opening/opening.wxss */

.pla_inner{
  padding:0 20rpx;
}
.picker_cell,.cell_inner{
  height:88rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  flex-direction:row;
  align-items: center;
   align-content: stretch; 
  border-bottom:1px solid #ddd;
}
.picker_cell:last-child,.cell_inner:last-child{
  border:none;
}
.picker_cell label,.cell_inner label{
  min-width:200rpx;
  flex-flow: 1;
}
.picker_cell>.pla_sel,.picker_cell .tex_center{
  text-align: left;
  flex-grow: 4;
  height:100%;
  line-height: 88rpx;
}
.picker_cell image{
  width:16rpx;
  height:30rpx;
}
.cell_inner_input{
  flex-grow: 4;
  height:100%;
  line-height: 88rpx;
}


.num_tool{
  height:60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-content: center;
  align-items: stretch;
  transition: all 0.1s ease-in-out;
}
.num_tool.active{
  min-width:160rpx;
}

.num_tool .num_tool_btn{
  width:50rpx;
  height: 50rpx;
  align-self: flex-end;
}
.num_tool_btn image{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
}


.protocol_tip{
  height:88rpx;
  line-height: 88rpx;
  text-align: left;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}
.protocol_tip .protocol_icon{
  width:30rpx;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.protocol_tip .protocol_icon image{
  width:30rpx;
  height:30rpx;
}

/* 弹窗 */
.y_alert{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  bottom:0;
  z-index:10000;
  background: rgba(0,0,0,0.5);
  overflow:hidden;
  padding:0 24rpx;
}

.y_alert_inner{
  width:100%;
  height:400rpx;
  background: #fff;
  margin-top:80rpx;
  border-radius: 8rpx;
  overflow:hidden;
  
}
.y_alert_header{
  height:88rpx;
  border-bottom:1px solid #d7eaff;
  position:relative;

}

.y_alert_header .y_close_icon{
  width:88rpx;
  height:88rpx;
  position:absolute;
  top:0;
  left:0;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.y_alert_header .y_close_icon image{
  width:24rpx;
  height:24rpx;
}
.y_alert_header .y_head_text{
  position: absolute;
  right:0;
  top:0;
  z-index: 10;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  padding:0 24rpx;
}
.y_head_title{
  height:100%;
  width: 100%;
  line-height: 88rpx;
  text-align: center;
}


.content_item{
  height:140rpx;
  border-bottom:1px solid #d7eaff;
  line-height: 140rpx;
  text-align: center;
}
.pass_item{

  padding:40rpx;
}
.pass_inner{
  min-width:528rpx;
  display: flex;
  flex-direction: row;
  border:1px solid #d7eaff;
  height:88rpx;
}
.pass_inner .pass_cell{
  width:88rpx;
  height:88rpx;
  flex-grow: 1;
  border-right:1px solid #d7eaff;
  text-align: center;
  line-height: 88rpx;
}
.pass_inner .pass_cell:last-child{
  border:none;
}
.pass_inner .pass_cell i{
  height:100%;
  line-height: 98rpx;
  display: block;
}
.input-content{
  display: none;
}



.y-alert{
