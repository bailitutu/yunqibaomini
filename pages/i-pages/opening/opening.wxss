  overflow:hidden;
}
.alert-content{
  padding:70rpx 0;
}
.alert-content image{
  width:82rpx;
  height:76rpx;
}
.y-alert-btns{
  border-top:1px solid #e9e9e9;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  overflow:hidden;
}
.y-alert-btns button{
  width:50%;
  height:100rpx;
  line-height: 100rpx;
  border-radius: 0;
  font-size:36rpx;
  text-align: center;
}
.y-alert-btns .cancel_btn{
  color:#999999;
  border-right:1px solid #e9e9e9;
}
.y-alert-btns .confirm_btn{
    color:#109ba6;
}
